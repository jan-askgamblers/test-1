{% extends 'base.html.twig' %}

{% block title %}Article list{% endblock %}

{% block body %}
    {% for article in articles %}
        <h2>{{ article.title }}</h2>
        <div>{{ article.content }}</div>
        {% for comment in article.comments %}
            <div><strong>{{ comment.user.email }}</strong> - {{ comment.text }}</div>
        {% endfor %}
    {% endfor %}
{% endblock %}
